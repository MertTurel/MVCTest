
@{
    ViewBag.Title = "Posts";
}

@model IEnumerable<DatabaseTest.Web.Models.Domain.Post>

<div class="d-flex">
    <div class="mr-auto p-2">
        <h2 class="display-4">
            Posts
        </h2>
    </div>
    <div class="ml-auto p-2">
        <a href="~/Post/CreatePost">
            <i class="fa fa-plus-circle fa-3x" style="padding-top: 15px"></i>
        </a>
    </div>
</div>

<hr/>
<br/>

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-12" style="padding-bottom: 10px">
                <div class="card">
                    <div class="card-header">
                        Card Header
                    </div>
                    <div class="card-body">
                        <h2 class="card-title">
                            @item.Title
                        </h2>
                        <p class="card-text">
                            @item.Content
                        </p>
                        <a href="#"><i class="fa fa-heart fa-fw"></i></a>
                        @Html.ActionLink("Edit", "EditPost", new {id = item.Id})
                    </div>
                    <div class="card-footer">
                        <p class="text-muted">Created At: @item.CreatedAt</p>
                        @if (!item.CreatedAt.Equals(item.LastModifiedAt))
                        {
                            <p class="text-muted">Edited At: @item.LastModifiedAt</p>
                        }
                    </div>
                </div>
            </div>  
        }
    </div>
</div>